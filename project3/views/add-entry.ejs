<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Share Entries ‚Äì Cats of NYUAD</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Patrick+Hand&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="walking-cat"></div>
  <%- include('partials/nav', { active }) %>
  <% if (added) { %><div class="flash" role="status" style="text-align:center;margin-top:8px;">Entry saved ‚úî</div><% } %>
  <main class="notebook notebook--add" role="main" aria-label="Two-page Add Entry spread">
    <div class="page page--left">
      <h2 class="page__title">Share an Entry</h2>
      <p class="lead">Spotted a furry friend on campus? Add your sightings to our diary!<br/>Please keep it friendly and factual.</p>
      
      <div class="tips-box">
        <h3>üì∏ Image Options</h3>
        <ul>
          <li><strong>Upload:</strong> Take a photo and upload it directly from your device</li>
          <li><strong>URL:</strong> Use a direct image link </li>
          <li>Ensure that the link works before adding it</li>
        </ul>
      </div>

      <div class="tips-box" style="margin-top: 1.5rem;">
        <h3>üêæ What to Include</h3>
        <ul>
          <li>Cat's name or nickname (if known)</li>
          <li>Location where spotted</li>
          <li>Distinguishing features or behaviors</li>
          <li>For the entry, think about what you would write if you were a cat</li>
        </ul>
      </div>
      
      <a class="paw-hotspot paw-prev" href="/diary" aria-label="Back to diary"></a>
    </div>
    <div class="spiral" aria-hidden="true"></div>
    <div class="page page--right">
      <h2 class="page__title">Entry Form</h2>
      <form method="POST" action="/entries" enctype="multipart/form-data" class="overlay-form">
        <div class="form-row">
          <label for="cat-name">Cat Name</label>
          <input id="cat-name" name="catName" type="text" placeholder="cat nickname" class="lined input--cat-name" required />
        </div>
        <div class="form-row">
          <label for="photographer">Photographer</label>
          <input id="photographer" name="photographer" type="text" placeholder="Your name (Optional)" class="lined input--photographer"/>
        </div>
        <div class="form-row">
          <label for="location">Location</label>
          <input id="location" name="location" type="text" placeholder="e.g., by the palm trees" class="lined input--location" required/>
        </div>
        
        <!-- Image Upload OR URL Option -->
        <div class="form-row">
          <label>Cat Image</label>
          <div class="image-option-toggle">
            <button type="button" class="option-btn active" data-option="upload">üì§ Upload Photo</button>
            <button type="button" class="option-btn" data-option="url">üîó Use URL</button>
          </div>
          
          <!-- Upload Option -->
          <div class="image-input-group active" id="upload-option">
            <div class="file-input-wrapper">
              <label for="cat-image-file" class="file-input-label" id="file-label">
                Click to choose a photo
              </label>
              <input type="file" id="cat-image-file" name="catImage" accept="image/*" />
              <div class="file-name" id="file-name"></div>
            </div>
          </div>
          
          <!-- URL Option -->
          <div class="image-input-group" id="url-option">
            <input id="image-url" name="imageUrl" type="url" placeholder="paste image link here" class="lined" />
          </div>
        </div>

        <div class="form-row">
          <label for="description">Diary Entry</label>
          <textarea id="description" name="description" placeholder="Funny diary entry about the cat" class="lined textarea--description" required></textarea>
        </div>
        <button type="submit" class="submit-button">Submit</button>
      </form>
      <a class="paw-hotspot paw-next" href="/about" aria-label="Go to About"></a>
    </div>
  </main>
  
  <script>
    // Toggle between upload and URL options
    const optionBtns = document.querySelectorAll('.option-btn');
    const uploadOption = document.getElementById('upload-option');
    const urlOption = document.getElementById('url-option');
    const fileInput = document.getElementById('cat-image-file');
    const urlInput = document.getElementById('image-url');
    const fileLabel = document.getElementById('file-label');
    const fileName = document.getElementById('file-name');

    optionBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const option = btn.dataset.option;
        
        // Update button states
        optionBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        
        // Show/hide appropriate input
        if (option === 'upload') {
          uploadOption.classList.add('active');
          urlOption.classList.remove('active');
          urlInput.value = ''; // Clear URL when switching
          urlInput.removeAttribute('required');
        } else {
          urlOption.classList.add('active');
          uploadOption.classList.remove('active');
          fileInput.value = ''; // Clear file when switching
          fileName.textContent = '';
          fileLabel.classList.remove('has-file');
        }
      });
    });

    // File input display
    fileInput.addEventListener('change', (e) => {
      if (e.target.files.length > 0) {
        const file = e.target.files[0];
        fileName.textContent = '‚úì ' + file.name;
        fileLabel.classList.add('has-file');
        fileLabel.textContent = 'Photo selected!';
      } else {
        fileName.textContent = '';
        fileLabel.classList.remove('has-file');
        fileLabel.textContent = 'Click to choose a photo';
      }
    });
  </script>
  <script src="/app.js" defer></script>
</body>
</html>